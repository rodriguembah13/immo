{% extends 'base.html.twig' %}

{% block title %}Site{% endblock %}
{% block navbarcontent %}
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="{{ path('home') }}" class="nav-link">Home</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link">Contact</a>
        </li>
    </ul>
{% endblock %}
{% block page_content %}
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">{{ 'label.site'|trans }}: {{ site.libelle }}- {{ element.number }}</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">{{ element.number }}</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
<div class="card card-primary card-outline">
    <div class="card-header">
        <h3 class="card-title">
            <i class="fas fa-edit"></i>
            {{ element.consitance }}
        </h3>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-5 col-sm-3">
                <div class="nav flex-column nav-tabs h-100" id="vert-tabs-tab" role="tablist" aria-orientation="vertical">
                    <a class="nav-link active" id="vert-tabs-home-tab" data-toggle="pill" href="#vert-tabs-detail" role="tab" aria-controls="vert-tabs-home" aria-selected="true">DÃ©tail</a>
                    <a class="nav-link" id="vert-tabs-profile-tab" data-toggle="pill" href="#vert-tabs-tenant" role="tab" aria-controls="vert-tabs-profile" aria-selected="false">{{ 'menu.tenant'|trans }}</a>
                    <a class="nav-link" id="vert-tabs-messages-tab" data-toggle="pill" href="#vert-tabs-bill" role="tab" aria-controls="vert-tabs-messages" aria-selected="false">{{ 'menu.bill'|trans }}</a>
                    <a class="nav-link" id="vert-tabs-settings-tab" data-toggle="pill" href="#vert-tabs-rental" role="tab" aria-controls="vert-tabs-settings" aria-selected="false">{{ 'menu.rental'|trans }}</a>
                </div>
            </div>
            <div class="col-7 col-sm-9">
                <div class="tab-content" id="vert-tabs-tabContent">
                    <div class="tab-pane text-left fade show active" id="vert-tabs-detail" role="tabpanel" aria-labelledby="vert-tabs-detail">
                        <table class="table">
                            <tbody>
                            <tr>
                                <th>{{ 'dt.columns.number'|trans }}</th>
                                <td>{{ element.number }}</td>
                            </tr>
                            <tr>
                                <th>{{ 'dt.columns.position'|trans }}</th>
                                <td>{{ element.position }}</td>
                            </tr>
                            <tr>
                                <th>{{ 'dt.columns.price'|trans }}</th>
                                <td>{{ element.price }}</td>
                            </tr>
                            <tr>
                                <th>{{ 'dt.columns.createdAt'|trans }}</th>
                                <td>{{ element.createdAt ? element.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                            </tr>
                            <tr>
                                <th>{{ 'dt.columns.numberRoom'|trans }}</th>
                                <td>{{ element.numberRoon }}</td>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="tab-pane fade" id="vert-tabs-tenant" role="tabpanel" aria-labelledby="vert-tabs-tenant">
                    </div>
                    <div class="tab-pane fade" id="vert-tabs-bill" role="tabpanel" aria-labelledby="vert-tabs-bill">
                   </div>
                    <div class="tab-pane fade" id="vert-tabs-rental" role="tabpanel" aria-labelledby="vert-tabs-rental">
                    </div>
                </div>
            </div>
        </div>
    </div></div>
{% endblock %}


