{% extends 'base.html.twig' %}

{% block page_title %}{{ 'local.title_list'|trans }}{% endblock %}

{% block page_content %}
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">{{ 'tenant.tilte_list'|trans }}</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">{{ 'tenant.tilte_list'|trans }}</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <div class="card">
        <div class="card-header">
             <div class="btn-group btn-group-sm float-right">
            <a class="btn-sm btn btn-success float-right" href="{{ path('tenant_new') }}"><i class="fa fa-plus"></i>
                {{ 'button.add'|trans({}, 'messages') }}</a>
                 <a class="btn btn-warning float-right"
                                                               href="{{ path('tenantpdf') }}" target="_blank"><i class="fa fa-print"></i> {{ 'button.print'|trans }}</a>
             </div>
        </div>
        <!-- /.card-header -->
        <div class="card-body table-responsive">
            <div class="table-striped" id="tenants">{{ 'loading'|trans({}, 'messages') }}</div>
        </div></div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script type="application/javascript">
        $(function () {
            $('#tenants').initDataTables({{ datatable_settings(datatable) }});
        });
    </script>
    {% include 'tenant/javascript.html.twig' %}
{% endblock %}